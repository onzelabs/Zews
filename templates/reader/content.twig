{% if page==1 %}
  <div class="page-header">
    <h2>{{ header }}</h2>
  </div>
{% endif %}

{% for item in items %}
  <div class="row oz-item">
    <div class="col-sm-2 col-xs-3">{{ item.tracker }}</div>
    <div class="col-sm-8 col-xs-7">{{ item.title }}</div>
    <div class="col-sm-1 col-xs-1">{{ item.pubdate }}</div>
    <div class="col-sm-1 col-xs-1"></div>
</div>
{% endfor %}

